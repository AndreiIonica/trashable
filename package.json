{
  "private": true,
  "workspaces": {
    "packages": [
      "carbon",
      "oxygen"
    ]
  },
  "scripts": {
    "setup:cz": "commitizen init cz-conventional-changelog --yarn --dev --exact",
    "start:carbon": "yarn workspace carbon start",
    "commit": "cz"
  },
  "license": "MIT",
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  }
}
