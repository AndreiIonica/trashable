{
  "private": true,
  "workspaces": {
    "packages": [
      "carbon",
      "oxygen"
    ]
  },
  "scripts": {
    "workspace:cz": "bash setup_cz.sh",
    "setup:cz": "commitizen init cz-conventional-changelog --yarn --dev --exact",
    "start:carbon": "yarn workspace carbon start",
    "cz": "cz"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable",
      "defaultScope": "global"
    }
  }
}
